<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>
            Catalog Page
        </title>
        <!-- Do not forget to change the path to the css file -->
        <link
            href="/static/css/style.css"
            type="text/css"
            rel="stylesheet"
        />
    </head>

    <body>
        <div id="box">
            {{#if error}}
                <div class="error-container">
                    <p>
                        {{error}}
                    </p>
                </div>
            {{/if}}

            <nav>
                <img
                    src="/static/img/logo.webp"
                    alt="logo"
                />

                <ul class="menu">
                    <li>
                        <a href="/">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/search">
                            Search
                        </a>
                    </li>
                    <li>
                        <a href="/about">
                            About
                        </a>
                    </li>
                    {{#if isAuthenticated}}
                        <li>
                            <a href="/movies/create">
                                Create Post
                            </a>
                        </li>
                        <li>
                            <a href="/casts/create">
                                Create Cast
                            </a>
                        </li>
                        <li>
                            <a href="/auth/logout">
                                Logout
                            </a>
                        </li>
                    {{else}}
                        <li>
                            <a href="/auth/login">
                                Login
                            </a>
                        </li>
                        <li>
                            <a href="/auth/register">
                                Register
                            </a>
                        </li>
                    {{/if}}
                </ul>
            </nav>

            <main>
                {{{body}}}
            </main>

            <footer>
                Â© JS Back-End Workshop
            </footer>
        </div>
    </body>
</html>