<div class="event">
    <div class="img">
        <img src={{image}} />
    </div>
    <div class="event-info">
        <h1>
            {{name}}
        </h1>
        <p>
            <span>
                Location:
            </span>
            {{location}}
        </p>
        <p>
            <span>
                Type:
            </span>
            {{type}}
        </p>
    </div>

    <a href="/events/details/{{_id}}" class="btn-details">
        Details
    </a>
</div>